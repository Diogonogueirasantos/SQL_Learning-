# Alias Direto

SELECT C.NAME, C.REGION, CONCAT(STREET_ADDRESS, "|", CITY, "|", STATE, "|", ZIP) AS FULL_ADDRESS FROM CUSTOMERS AS C;

# Alias Indireto

SELECT C.NAME, C.REGION, CONCAT(STREET_ADDRESS, "|", CITY, "|", STATE, "|", ZIP) AS FULL_ADDRESS FROM CUSTOMERS  C;


