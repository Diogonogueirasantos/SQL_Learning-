USE SQL_Fundamentals;

SELECT C.CUSTOMER_ID, C.NAME, C.REGION, CONCAT(STREET_ADDRESS, "|", CITY, STATE, ZIP) AS FULL_ADDRESS,
P.PRODUCT_ID, P.DESCRIPTION, P.PRICE, O.ORDER_ID, O.ORDER_DATE, O.SHIP_DATE, O.ORDER_QTY FROM CUSTOMER AS C
INNER JOIN CUSTOMER_ORDER AS O ON C.CUSTOMER_ID = O.CUSTOMER_ID
INNER JOIN PRODUCT AS P ON O.PRODUCT_ID = P.PRODUCT_ID
GROUP BY 1, 2;

